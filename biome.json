{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": [
      "node_modules/**",
      "build/**",
      "dist/**",
      "dist-types/**",
      "pkg/**",
      "target/**",
      ".git/**",
      "cg-types/**",
      "generators/**",
      "src/routeTree.gen.ts",
      "**/*.gen.ts",
      "**/generated/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
