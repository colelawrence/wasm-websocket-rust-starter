{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Preserve",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "declaration": false,
    "types": ["bun-types"],
    "outDir": "./dist-types",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true,
    "paths": {
      "#src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist-types"]
}
